    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "svg-sprite-loader": "^6.0.9",
    "terser-webpack-plugin": "^5.1.1",
    "ts-loader": "^9.1.2",
    "tslint": "^6.1.3",
    "tslint-react": "^5.0.0",
    "typescript": "^4.2.4",
    "url-loader": "^4.1.1",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint",
      "pre-push": "yarn run lint && yarn run build:production",
      "post-commit": "git status",
      "post-checkout": "yarn run ci",
      "post-merge": "yarn run ci"
    }
  }
}
