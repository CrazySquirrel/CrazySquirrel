    "react-router-dom": "^5.2.0",
    "redux": "^4.1.0",
    "redux-thunk": "^2.3.0",
    "webpack-node-externals": "^3.0.0"
  },
  "devDependencies": {
    "@ianwalter/exclude-assets-plugin": "^1.0.0",
    "@sentry/browser": "^6.11.0",
    "@svgr/webpack": "^5.5.0",
    "@types/chart.js": "^2.9.32",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "@types/react-redux": "^7.1.16",
