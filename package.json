  "man": "./README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/CrazySquirrel/CrazySquirrel"
  },
  "scripts": {
    "ssr": "node ./scripts/ssr.js",
    "serve": "node ./scripts/server.js",
    "build:development": "parallel-webpack --config ./config/webpack.development.config.js",
    "build:production": "parallel-webpack --config ./config/webpack.production.config.js",
    "build:development:watch": "parallel-webpack --config ./config/webpack.development-watch.config.js --watch",
    "build:production:watch": "parallel-webpack --config ./config/webpack.production-watch.config.js --watch",
    "build:deployment": "parallel-webpack --config ./config/webpack.deployment.config.js --no-stats --max-retries=3",
    "lint": "npm run lint:tslint && npm run lint:eslint",
    "lint:eslint": "eslint -c .eslintrc.json '{scripts,src}/**/*.{js,jsx}'",
    "lint:tslint": "tslint -c tslint.json -e '**/*.example.*' --project tsconfig.json '{scripts,src}/**/*.{ts,tsx}'",
    "postinstall": "yarn run postinstall:git-lfs && yarn run postinstall:husky",
    "postinstall:git-lfs": "git lfs update --force",
    "postinstall:husky": "husky install",
    "ci": "yarn install --frozen-lockfile"
  },
  "dependencies": {
